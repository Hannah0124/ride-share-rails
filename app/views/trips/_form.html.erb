<%= form_with model: @trip, class: '_form__container' do |f| %>
  <p class="_form_instruction">Please provide the following information to <%= action_name %> the trips to our database:</p>

  <% if @trip.errors.any? %> 
    <ul class="errors"> 
      <% @trip.errors.each do |column, message| %> 
        <li>
          <strong class="red"><%= column.capitalize %></strong> <%= message %>
        </li>
      <% end %>
    </ul>
  <% end %>


  <div class="_form-text-container">
    <div class="_form">
      <%= f.label :rating, class: "_form__label" %>
      <%= f.text_field :rating, class: "_form__text_field" %>
    </div>
  </div>

  <%= f.submit action_name, class: "_form__trip-btn" %>
<% end %>