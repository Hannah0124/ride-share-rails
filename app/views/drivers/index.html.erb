<section class="drivers__show__conatiner">
  <h3 class="show__title">Driver List</h3>
  <div class="show__btn">
    <%= link_to "âž•Add Driver", new_driver_path, class: 'index__add-btn' %>
  </div>
</section>



<%# reference: https://codepen.io/nikhil8krishnan/pen/WvYPvv %>
<section>
  <div class="tbl-header show__background">
    <table cellpadding="0" cellspacing="0" border="0">
      <thead>
        <tr>
          <th>Driver ID</th>
          <th>Name</th>
          <th>VIN</th>
          <th>AVAILABLE</th>
        </tr>
      </thead>
    </table>
  </div>
  <div class="tbl-content">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        
          <% @drivers.each do |driver| %>
            <tr>
              <td><%= driver.id %></td>
              <td><%= link_to driver.name, driver_path(driver) %></td>
              <td><%= driver.vin %></td>
              <% if driver.available %>
                <td>available</td>
              <% else %>
                <td>not available</td>
              <% end %>
            </tr>
          <% end %>
        
      </tbody>
    </table>
  </div>
</section>