<section class="passengers__index__conatiner">
  <h3 class="passengers__index__title">Passenger List</h3>
  <div class="passengers__index__btn">
    <%= link_to "➕Add Passenger", new_passenger_path, class: 'passengers__index__add-btn' %>
  </div>
</section>



<%# reference: https://codepen.io/nikhil8krishnan/pen/WvYPvv %>
<section>
  <h6 class="gray-letter">order: sorted by ID ascending</h6>
  <div class="tbl-header index__background">
    <table cellpadding="0" cellspacing="0" border="0">
      <thead>
        <tr>
          <th>Passenger ID</th>
          <th>Name</th>
          <th>Phone Number</th>
          <th>Request Ride</th>
          <th>Details</th>
        </tr>
      </thead>
    </table>
  </div>
  <div class="tbl-content">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        
          <% @passengers.each do |passenger| %>
            <tr>
              <td><%= passenger.id %></td>
              <td><%= link_to passenger.name, passenger_path(passenger) %></td>
              <td><%= passenger.phone_num %></td>
              <td><%= link_to "request ride", passenger_trips_path(passenger.id), method: :post, data: { confirm: '❗️ Are you sure you want to request a ride?' } %></td>
              <td><%= link_to "details", passenger_path(passenger) %></td>
            </tr>
          <% end %>
        
      </tbody>
    </table>
  </div>
</section>